{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "application",
      "host": {
        "sourcePath": "/var/app/current/"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/aws_config/nginx"
      }
    },
    {
      "name": "php-conf",
      "host": {
        "sourcePath": "/var/app/current/aws_config/php/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "php-app",
      "image": "242450823403.dkr.ecr.us-east-1.amazonaws.com/php-fpm:5.6",
      "essential": true,
      "memoryReservation": 512,
      "mountPoints": [
        {
          "sourceVolume": "application",
          "containerPath": "/var/www/html",
          "readOnly": false
        },
        {
          "sourceVolume": "awseb-logs-php-app",
          "containerPath": "/var/log/sample-app"
        },
        {
          "sourceVolume" : "php-conf",
          "containerPath": "/usr/local/etc",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "242450823403.dkr.ecr.us-east-1.amazonaws.com/sandwitch:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "php-app"
      ],
      "environment": [
        {
          "name": "SKIP_VARNISH_INITIALIZATION",
          "value": true
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "application",
          "containerPath": "/var/www/html",
          "readOnly": false
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/usr/local/openresty/nginx/logs"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/usr/local/openresty/nginx/conf",
          "readOnly": true
        }
      ]
    }
  ]
}
